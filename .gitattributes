# Normalize line endings for text files
* text=auto
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.csv text eol=lf

# Binary files
demonstration/**/*.xlsx filter=lfs diff=lfs merge=lfs -text
demonstration/**/*.pptx filter=lfs diff=lfs merge=lfs -text
demonstration/**/*.pdf filter=lfs diff=lfs merge=lfs -text
media/*.webm filter=lfs diff=lfs merge=lfs -text
demonstration/** filter=lfs diff=lfs merge=lfs -text
